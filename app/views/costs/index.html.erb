<h1>Listing costs</h1>

<table>
  <thead>
    <tr>
      <th>Count</th>
      <th>Unit</th>
      <th>Unit price</th>
      <th>Journal</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @costs.each do |cost| %>
      <tr>
        <td><%= cost.count %></td>
        <td><%= cost.unit %></td>
        <td><%= cost.unit_price %></td>
        <td><%= cost.journal_id %></td>
        <td><%= link_to 'Show', cost %></td>
        <td><%= link_to 'Edit', edit_cost_path(cost) %></td>
        <td><%= link_to 'Destroy', cost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

