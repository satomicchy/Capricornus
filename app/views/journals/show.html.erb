<h3>日誌詳細</h3>

<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">
    <strong><%= @journal.start_at.try(:strftime, "%Y-%m-%d") %></strong>
    &nbsp;&nbsp;
    <%= link_to '編集', edit_journal_path(@journal), class: "btn btn-danger btn-xs" %>
  </div>
  <table class="table table-bordered">
    <tr>
      <th>始業時刻</th>
      <td><%= @journal.start_at.try(:strftime, "%Y-%m-%d %H:%M") %></td>
    </tr>
    <tr>
      <th>終業時刻</th>
      <td><%= @journal.finish_at.try(:strftime, "%Y-%m-%d %H:%M") %></td>
    </tr>
    <tr>
      <th>内容</th>
      <td><%= @journal.content %></td>
    </tr>
    <tr>
      <th>場所</th>
      <td><%= @journal.city %></td>
    </tr>
    <tr>
      <th>取引先</th>
      <td><%= @journal.custom.try(:name) %></td>
    </tr>
    <tr>
      <th>完了</th>
      <td><%= @journal.complete %></td>
    </tr>
    <tr>
      <th>請求書</th>
      <td><%= @journal.invoice_id %></td>
    </tr>
    <tr>
      <th>実施者</th>
      <td><%= @journal.user.try(:name) %></td>
    </tr>
  </table>
</div>

<table class="table table-bordered bottom-no-margin">
  <tr class="active">
    <th>単位</th>
    <th>数量</th>
    <th>単価</th>
    <th>金額</th>
    <th>&nbsp;</th>
  </tr>
  <% @costs.each do |cost| %>
  <tr>
    <td><%= cost.unit %></td>
    <td><%= cost.count %></td>
    <td><%= cost.unit_price %></td>
    <td><%= cost.unit * cost.unit_price %></td>
    <td><%= link_to '編集', edit_journal_cost_path(@journal, cost), class: "btn btn-danger btn-ms" %></td>
  </tr>
  <% end %>
</table>
<%= link_to '請求追加', new_journal_cost_path(@journal), class: "btn btn-danger btn-sm pull-right" %>

<div>&nbsp;</div>
