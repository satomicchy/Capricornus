<%= form_for(@journal) do |f| %>
  <% if @journal.errors.any? %>
    <div class="alert alert-danger">
      <h4><em>足りないところがあるようです・・・。</em></h4>

      <ul>
      <% @journal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table">
    <tr>
      <th><%= f.label :start_at %></th>
      <td><%= f.text_field :start_at, {value: f.object.start_at.try("strftime", "%F %H:%M"), class: "pick_datetime_15 form-control", size: "10"} %></td>
    </tr>
    <tr>
      <th><%= f.label :finish_at %></th>
      <td><%= f.text_field :finish_at, {value: f.object.finish_at.try("strftime", "%F %H:%M"), class: "pick_datetime_15 form-control", size: "10"} %></td>
    </tr>
    <tr>
      <th><%= f.label :content %></th>
      <td><%= f.text_field :content, class: "form-control" %></td>
    </tr>
    <tr>
      <th><%= f.label :city %></th>
      <td><%= f.text_field :city, class: "form-control" %></td>
    </tr>
    <tr>
      <th><%= f.label :custom_id %></th>
      <td><%= f.select :custom_id, Custom.all.map{|c| [c.name, c.id]} %></td>
    </tr>
    <tr>
      <th><%= f.label :complete %></th>
      <td><%= f.check_box :complete %></td>
    </tr>
    <% if request.path_parameters[:action] == "edit"%>
      <tr>
        <th><%= f.label :invoice_id %></th>
        <td>
          <% if @journal.custom_id %>
            請求日&nbsp;<%= f.select :invoice_id, Invoice.unfinished_payment.where(custom_id: @journal.custom_id).map{|c| [c.ask_on, c.id]}, include_blank: '保留' %>
          <% else %>
            取引先を設定してください。
          <% end %>
        </td>
      </tr>
    <% end %>
    <tr>
      <th><%= f.submit class: "btn btn-primary btn-sm" %></th>
      <td>&nbsp;</td>
    </tr>
  </table>
  <%= f.hidden_field :user_id, value: current_user.id %>
<% end %>
