<%= form_for(@invoice) do |f| %>
  <% if @invoice.errors.any? %>
    <div class="alert alert-danger">
      <h4><em>足りないところがあるようです・・・。</em></h4>

      <ul>
      <% @invoice.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table">
    <tr>
      <th><%= f.label :ask_on %></th>
      <td><%= f.text_field :ask_on, class: "pick_date form-control", size: "10" %></td>
    </tr>
    <tr>
      <th><%= f.label :deadline %></th>
      <td><%= f.text_field :deadline, class: "pick_date form-control", size: "10" %></td>
    </tr>
    <tr>
      <th><%= f.label :custom_id %></th>
      <td><%= f.select :custom_id, Customer.all.map{|c| [c.name, c.id]} %></td>
    </tr>
    <tr>
      <th><%= f.label :payment %></th>
      <td><%= f.check_box :payment %></td>
    </tr>
    <tr>
      <th><%= f.label :memo %></th>
      <td><%= f.text_area :memo, class: "form-control" %></td>
    </tr>
    <tr>
      <th><%= f.submit class: "btn btn-primary btn-sm" %></th>
      <td>&nbsp;</td>
    </tr>
  </table>
<% end %>
