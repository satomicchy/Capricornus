<h3>ユーザー情報<%= link_to '新規追加', new_user_path, class: "btn btn-danger btn-sm pull-right" %></h3>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>&nbsp;</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to '編集', edit_user_path(user), class: "btn btn-danger btn-sm" %>
</td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>&nbsp;</div>

